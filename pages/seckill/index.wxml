<view class="container">
  <view class="list-header">

    <!-- 搜索框 -->
    <view class="index-search-box dis-flex">
      <view class="index-search flex-box" catchtap="triggerSearch">
        <view class="index-cont-search">
          <icon class="text-center" size="15" type="search"></icon>
          <text>{{ option.search ? option.search  : '搜索商品' }}</text>
        </view>
      </view>
      <view bindtap="onChangeShowState" class="list-right f-28">
        <text class="iconfont icon-tubiao_kuaizhuangpailie" wx:if="{{showView}}"></text>
        <text class="iconfont icon-tubiao_liebiaopailie" wx:else></text>
      </view>
    </view>

    <!-- 筛选标签 -->
    <!-- 顶部选项卡 -->
    <view class="header f-28 col-3">
      <view catchtap="bindHeaderTap" class="{{dataType==='on-going'?'active':''}}" data-type="on-going">
        <text>已开始</text>
      </view>
      <view bindtap="bindHeaderTap" class="{{dataType==='not-started'?'active':''}}" data-type="not-started">
        <text>未开始</text>
      </view>
    </view>

    <!-- 商品列表 -->
    <scroll-view bindscrolltolower="bindDownLoad" scroll-y style="height: {{scrollHeight}}px; width: 750rpx; margin-top: 88rpx;" wx:if="{{list.data.length > 0}}">
      <view class="new">
        <view class="category-list {{ arrange }}">
          <navigator class="list b-f" hover-class="none" url="./seckillGoods/index?goods_id={{item.goods_id}}" wx:for="{{list.data}}" wx:key="list">
            <view class="left">
              <view class="img">
                <image class="goodsImg" mode="scaleToFill" src="{{item.image[0].file_path}}"></image>
                
                <text class="daojishi f-30" style="color: #ff495e !important; " wx:if="{{showView1}}">
                  <text style="color: #fff;" wx:if="{{dataType=='on-going'}}">距结束：</text>
                  <text style="color: #fff;" wx:if="{{dataType=='not-started'}}">距开始：</text>{{countdown}}
                </text>
              
                <text class="daojishi f-26" style="color: #ff495e !important; "  wx:if="{{!showView1}}">
                  <text style="color: #fff;">距结束：</text>{{countdown}}
                </text>
                <!-- <text class="daojishi f-30" style="color: #ff495e !important; ">
                <text style="color: #fff;">距结束：</text>{{countdown}}
                </text> -->
              </view>
            </view>
            <view class="right">
              <view class="cont">
                <text class="f-30 title twolist-hidden m-top10">{{item.goods_name}}</text>
                <view class="price f-32 col-m m-top10">
                  特惠价格：￥{{item.sku[0].seckill_price}}
                  <text class="del f-22" wx:if="{{item.sku[0].line_price>0}}">{{item.sku[0].line_price}}</text>
                </view>
              </view>
            </view>
          </navigator>
        </view>
      </view>
      <view wx:if="{{ no_more }}" class="no-more f-30">亲, 没有更多了</view>
    </scroll-view>
  </view>

  <!-- 无数据 -->
  <!-- <view wx:if="{{ !isLoading && !list.data.length }}" class="yoshop-notcont" style="margin-top:130px;"> -->
  <view wx:if="{{  list.data.length == 0 }}" class="yoshop-notcont" style="margin-top:130px;">
    <view class="img">
      <image mode="aspectFit" src="../../images/no_content.png"></image>
    </view>
    <text class="cont">亲, 没有相关内容</text>
  </view>

</view>